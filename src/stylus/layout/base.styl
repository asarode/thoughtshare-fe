html
  font-size: 16px

*
  box-sizing: border-box

body
  font-family: 'Noto Sans', sans-serif
  background: #fafafa
  
  &.modal-open
    overflow: hidden

.flexrow
  display: flex

h1
  font-size: 1.8em
  line-height: 1.8

#nav-logo
  cursor: pointer

.vmar-compact
  margin-top: 0.5rem
  margin-bottom: 0.5rem

.vmar-normal
  margin-top: 1rem
  margin-bottom: 1rem

.vmar-spacious
  margin-top: 1.4rem
  margin-bottom: 1.4rem

.vmar-no-top
  margin-top: 0

.vmar-no-bottom
  margin-bottom: 0

.MainView
  padding: 1rem

.card
  background: #fff
  padding: 0 1rem
  border-radius: 3px
  border: 1px solid #f0f0f0

  .content-row
    margin: 0.5rem 0
    
    &:first-child
      margin-top: 1rem
      
    &:last-child
      margin-bottom: 1rem
      
  .header
    font-size: 1.2em
  
  .details
    font-size: 0.8em

.card-muted
  background-color: #fcfcfc

.card-group

  .card:first-of-type
    border-bottom-right-radius: 0
    border-bottom-left-radius: 0
  
  .card:not(:first-of-type):not(:last-of-type)
    border-top: 0
    border-radius: 0
    padding-top: 1rem

    .content-row
      margin-top: 0
  
  .card:last-of-type
    border-top: 0
    border-top-right-radius: 0
    border-top-left-radius: 0
    padding-top: 1rem

    .content-row
      margin-top: 0

.clickable
  color: #1F99E6
  text-decoration: none
  
  &:visited
    color darken(@color, 30%)

  &:hover
    cursor: pointer
    color: lighten(@color, 20%)

[class*='button']
  padding: 0.3rem 1rem
  font-size: 1em
  background: none
  border: none
  border-radius: 3px
  text-transform: uppercase
  font-weight: bold
  
  &:hover
    cursor: pointer

.button-light
  color: #1F99E6

  &:hover
    color: lighten(@color, 20%)

.button-heavy
  color: #fff
  background: #1F99E6
  border-color: darken(@background, 20%)
  
  &:hover
    background: lighten(@background, 10%)

.form
  .form-row:not(:first-of-type)
    margin-top: 1rem
  
input[type='text'],
input[type='password'],
textarea
  min-width: 100%
  padding: 0.5rem
  font-size: 1.2em
  margin-top: 0.5rem
  border-radius: 3px
  border: 1px solid lighten(#1F99E6, 60%)
  
  &:focus,
  &:active
    border-color: #1F99E6
    outline: none

.content-group
  margin-bottom: 1rem
