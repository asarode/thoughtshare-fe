html
  font-size: 16px

*
  box-sizing: border-box

body
  font-family: 'Noto Sans', sans-serif
  background: #fafafa

.MainView
  padding: 1rem

.card
  background: #fff
  padding: 0 1rem
  border-radius: 3px
  border: 1px solid #f0f0f0
  
  .content-row
    margin: 0.5rem 0
    
    &:first-child
      margin-top: 1rem
      
    &:last-child
      margin-bottom: 1rem

  .header
    font-size: 1.2em
  
  .details
    font-size: 0.8em

.clickable
  color: #1F99E6
  text-decoration: none
  
  &:visited
    color darken(@color, 30%)

  &:hover
    cursor: pointer
    color: lighten(@color, 20%)

[class*='button']
  padding: 0.3rem 1rem
  font-size: 1em
  background: none
  border: none
  border-radius: 3px
  text-transform: uppercase
  font-weight: bold
  
  &:hover
    cursor: pointer

.button-light
  color: #1F99E6

  &:hover
    color: lighten(@color, 20%)

.button-heavy
  color: #fff
  background: #1F99E6
  border-color: darken(@background, 20%)
  
  &:hover
    background: lighten(@background, 10%)

form
  .form-row:not(:first-of-type)
    margin-top: 1rem
  
input[type='text'],
textarea
  min-width: 100%
  padding: 0.5rem
  font-size: 1.2em
  margin-top: 0.5rem
  border-radius: 3px
  border: 1px solid lighten(#1F99E6, 60%)
  
  &:focus,
  &:active
    border-color: #1F99E6
    outline: none

.content-group
  margin-bottom: 1rem
