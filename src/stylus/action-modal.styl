.ActionModal
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: linear-gradient(to right, rgba(255,255,255,0.8) 0%, rgba(255,255,255,1) 100%);

  &:hover
    cursor: pointer

.ActionModal-content
  float: right
  width: 40vw
  min-width: 380px
  height: 100%
  border-left: 1px solid #d6d6d6
  background: white
  padding: 30px
  box-sizing: border-box
  overflow-y: scroll

  &:hover
    cursor: default

.ActionModal-header
  margin: 0

.ActionModal-inputrow
  margin: 30px 0
