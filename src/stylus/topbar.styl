.TopBar
  display: flex
  justify-content: space-between
  align-content: center
  border-bottom: 1px solid #fafafa
  padding-bottom: 12px

  div:first-child,
  button,
  &-brandname,
  &-logo
    margin: auto 0

  &-brandname,
  &-logo
    display: inline-block
    vertical-align: middle

  &-center
    display: flex

  &-left
    display: flex
    flex: 1 0
    align-content: center

  &-right
    display: flex
    flex: 1 0
    justify-content: flex-end

  &-logo
    width: 40px
    height: 40px
    margin-right: 8px
