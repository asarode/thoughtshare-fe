.Card
  width: 150px
  border: 1px solid #d0d0d0
  border-radius: 3px
  overflow-y: hidden
  display: flex
  flex-direction: column

  &-wrap-name,
  &-wrap-stats
    margin: 4px

  &-wrap-tags-overlay
    position: relative
    height: 100px
    display: flex
    justify-content: center
    align-items: center

  &-overlay-tag
    text-align: center
    background-color: $overlay-tag-background
    color: $overlay-tag-color
    margin-bottom: 4px
    padding: 2px 4px
    border-radius: 2px

  &-wrap-stats
    margin-top: auto
    display: flex
    justify-content: space-between

  &-stat
    font-size: 20px
    label
      font-size: 11px

.Mana
  display: inline-block
  width: 14px
  height: 14px
  margin-right: 3px
  border: 1px solid
  border-radius: 100px
  font-size: 12px
  text-align: center;
  vertical-align: middle
  color: black

  &-colorless
    background-color: $mana-colorless
    border-color: darken(@background-color, 30%)
  &-white
    background-color: $mana-white
    border-color: darken(@background-color, 30%)
  &-blue
    background-color: $mana-blue
    border-color: darken(@background-color, 30%)
